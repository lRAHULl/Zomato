<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center;">Add a new Dish</h1>
  <div style="margin: 20px auto;width: 30%;">
    <form action="/hotels/<%= hotel._id %>/dishes" method="POST">
      <div class="form-group">
        <input type="text" name="dish[name]" placeholder="Enter the Dish name" class="form-control" required>
      </div>
      <div class="form-group">
        <input type="text" name="dish[image]" placeholder="Enter the image url" class="form-control" required>
      </div>
      <div class="form-group">
        <input type="text" name="dish[price]" placeholder="Enter the price" class="form-control" required>
      </div>
      <div class="form-group">
        <input class="btn btn-lg btn-primary btn-block" type="submit">
      </div>
    </form>
    <a href="/hotels">back</a>
  </div>
</div>


<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container">
  <div class="row">
    <!--<div class="col-md-1"></div>-->
    <div class="col-md-12">
      <div class="thumbnail">
        <img src="<%= hotel.image %>" alt=<%= hotel.name %>>
        <div class="caption-full">
          <h4><a><%= hotel.name %></a></h4>
          <p><%= hotel.description %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="well">
      <div class="text-right"><a href="/hotels/<%= hotel._id %>/dishes/new" class="btn btn-success">Add a new Dish</a></div>
    
      <hr>
        
      <% hotel.dishes.forEach(dish => { %>
      <div class="row">
        <div class="col-md-3">
          <img src="<%= dish.image %>" alt=<%= dish.name %> width=100 height=100>
        </div>
        <div class="col-md-9">
          <h3><%= dish.name %></h3>
          <p><strong>Price: </strong>&#8377;<%= dish.price %></p>
        </div>
      </div>
      <hr>
      <% }) %>
    
      <div class="text-right"><a href="/hotels">Back</a></div>
    </div>
</div>


<% include ../partials/footer %>

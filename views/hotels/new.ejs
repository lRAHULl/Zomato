<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center;">Add a new Hotel</h1>
  <div style="margin: 20px auto;width: 30%;">
    <form action="/hotels" method="POST">
      <div class="form-group">
        <input type="text" name="hotel[name]" placeholder="Enter the Hotel name" class="form-control" required>
      </div>
      <div class="form-group">
        <input type="text" name="hotel[image]" placeholder="Enter the image url" class="form-control" required>
      </div>
      <div class="form-group">
        <input type="text" name="hotel[description]" placeholder="Enter the description" class="form-control" required>
      </div>
      <div class="form-group">
        <input class="btn btn-lg btn-primary btn-block" type="submit">
      </div>
    </form>
    <a href="/hotels">back</a>
  </div>
</div>


<% include ../partials/footer %>